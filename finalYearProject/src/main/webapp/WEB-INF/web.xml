    <url-pattern>/jobs</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Autorization</servlet-name>
    <servlet-class>com.work.servlets.FindJobServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Autorization</servlet-name>
    <url-pattern>/autorization</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EmployeeRegistration</servlet-name>
    <servlet-class>com.work.servlets.EmployeeRegistrationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EmployeeRegistration</servlet-name>
    <url-pattern>/employee_registration</url-pattern>
  </servlet-mapping>
</web-app>


